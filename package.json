{
  "name": "tabbeddocs",
  "private": true,
  "version": "0.0.0",
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "desktop:dev": "concurrently -k \"vite --port 3000 --strictPort\" \"wait-on tcp:3000 && electron .\"",
    "desktop:build": "npm run build && electron-builder --win nsis",
    "desktop:exe": "npm run build && electron-packager . TabbedDocs --platform=win32 --arch=x64 --out=release --overwrite --prune=true"
  },
  "dependencies": {
    "@fontsource/eb-garamond": "^5.2.7",
    "@fontsource/fira-code": "^5.2.7",
    "@fontsource/ibm-plex-mono": "^5.2.7",
    "@fontsource/inter": "^5.2.8",
    "@fontsource/jetbrains-mono": "^5.2.8",
    "@fontsource/public-sans": "^5.2.7",
    "@fontsource/roboto": "^5.2.9",
    "@fontsource/source-serif-4": "^5.2.9",
    "@fontsource/space-grotesk": "^5.2.10",
    "@fortawesome/fontawesome-free": "^7.2.0",
    "@google/genai": "^1.40.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.1.2",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.tabbeddocs.app",
    "productName": "TabbedDocs",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "directories": {
      "output": "release"
    }
  }
}
